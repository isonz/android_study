<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark"
    tools:context="com.example.ison.myapplication.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/return_block"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/color_red"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/return_btn"
                android:id="@+id/return_btn"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE YOUR BREAK"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_white"
                android:textSize="18sp"/>
        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="@color/color_black"
                android:alpha="0.5">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECT YOUR INGREDIENTS"
                    android:textSize="18sp"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/color_white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Can choose 0-3 inclusions"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:gravity="center">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="15dp">
                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/layout_selecter">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/raisin"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sundried Raisin"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/layout_selecter">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/orange"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tangy Orange Pieces"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </FrameLayout>
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="15dp">
                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/layout_selecter">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/pecan"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heavenly pecan"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/layout_selecter">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rich"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rich Chocolate Cookies"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </FrameLayout>
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="15dp">
                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/layout_selecter">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/juicy"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Juicy Apricot Pieces"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/layout_selecter">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/peaunt"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crushed Roasted Peaunt"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </FrameLayout>
                </TableRow>

            </TableLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/color_red"/>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/color_white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@color/color_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/color_white"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@color/color_black"/>
                </LinearLayout>
            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="PRICE:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$6"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_red"/>
            </RelativeLayout>

        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_black"
                android:alpha="0.5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/create1_back"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@color/color_red"
                    android:text="BACK"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/create1_next"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@color/color_red"
                    android:text="NEXT"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    style="?android:attr/borderlessButtonStyle"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

